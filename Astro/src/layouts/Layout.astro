---
const { title, children } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <h1>Bienvenido a mi sitio web</h1>
    </header>
    <main>{children}</main>
    <footer>
      <p>&copy; 2025 Mi sitio web</p>
    </footer>
  </body>
</html>
