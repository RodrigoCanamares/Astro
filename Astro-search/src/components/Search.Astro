<div class="search-wrapper">
    <div id="searchbox"></div>
    <div id="hits"></div>
  
    <script type="module" src="/src/scripts/search.mjs"></script>
  </div>
  
  <style>
    .search-wrapper {
      max-width: 800px;
      margin: 2rem auto;
      padding: 1rem;
    }
  
    :global(.ais-SearchBox-input) {
      width: 100%;
      padding: 0.8rem;
      border: 2px solid #eee;
      border-radius: 8px;
      font-size: 1rem;
      margin-bottom: 2rem;
    }
  
    :global(.ais-Hits-list) {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    :global(.ais-Hits-item) {
      padding: 1rem;
      border: 1px solid #eee;
      margin-bottom: 1rem;
      border-radius: 8px;
    }
  
    :global(.hit) {
      display: grid;
      gap: 0.5rem;
    }
  
    :global(.hit h2) {
      margin: 0;
      color: #2563eb;
    }
  </style>
  